<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appmovil.proyecto.monedita.dany.moneditapp.MainActivity">

    <TextView
        android:id="@+id/txt_bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="Bienvenido a tu Control Financiero"
        android:textAlignment="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_bienvenida"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="MoneditApp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_app"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="descripcion"
        android:src="@mipmap/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@android:color/background_light"
        android:text="Iniciar Sesion"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_registra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_iniciar"
        android:layout_alignBottom="@+id/btn_iniciar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        android:backgroundTint="@android:color/background_light"
        android:text="Registrarse"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold" />


    </RelativeLayout>

